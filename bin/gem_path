#!/usr/bin/env ruby
# vim: set ts=2 sw=2 tw=78 ft=ruby

class NoRVMError < StandardError; end

gem_paths = ENV['GEM_PATH']
gem_path = if gem_paths
             File.join gem_paths.split(':').first, 'gems'
           else
             raise NoRVMError, "RVM isn't installed."
           end

if ARGV.empty?
  print gem_path
  exit 0
end
